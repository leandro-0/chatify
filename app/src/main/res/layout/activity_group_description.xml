
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupDescriptionActivity">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:tint="@color/indigo" />

    <ImageView
        android:id="@+id/groupImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/group" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Group Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/groupCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Creado el: Date"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/groupMembersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupCreatedAt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Members"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupMembersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupMembersLabel"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

</RelativeLayout>